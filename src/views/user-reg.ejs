<div class="container-fluid py-3 py-md-4" style="background-color: #e9faff;">
    <div class="container py-5" style="max-width: 500px;">
        <div class="card border-0 rounded-3 shadow-lg p-2 p-md-5">
            <div class="card-body">
                <h1 class="text-center">Talent</h1>
                <form action="/user-reg" method="post" class="my-5" enctype="multipart/form-data">
    
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" name="full_name" placeholder="name" required>
                        <label for="name">Full Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                        <label for="email">Email address</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="email" name="intro" placeholder="name@example.com" required>
                        <label for="email">Please do a short video of 5 mins introduction</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="email" name="nin" placeholder="name@example.com" required>
                        <label for="email">NIN</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="email" name="linkedn" placeholder="name@example.com" required>
                        <label for="email">Linkedin</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="email" name="github" placeholder="name@example.com">
                        <label for="email">Github (optional)</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="file" class="form-control" id="email" name="file" placeholder="Resume" required>
                        <label for="email">Resume</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="password" required>
                        <label for="password">Password</label>
                    </div>
                    <div class="d-grid mt-4">
                        <button class="btn btn-primary fs-5">Register</button>
                    </div>
    
                    <% if(error) { %>
                        <p class="mt-3 fw-medium text-danger"><%= error %></p>
                    <% } %>

                    <% if(success) { %>
                        <p class="mt-3 fw-medium text-success"><%= message %></p>
                    <% } %>
                </form>
            
                <p class="mt-4 text-center">Already have an account? <a href="/login">Login</a></p>
            </div>
        </div>
    </div>
</div>